@model Ticket.Web.Models.Problems.ProblemIndexVm
@using Ticket.Web.Auth

@{
    ViewData["Title"] = "Sorun/Hizmet Listesi";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="mb-0">Sorun/Hizmet Listesi</h2>

    <div class="d-flex gap-2 align-items-center">
        <form method="get" class="d-flex gap-2 align-items-center">
            <input name="q" value="@Model.Q" class="form-control" placeholder="Ara: kod / ad / birim" />

            
            <div class="form-check ms-1">
                <input class="form-check-input"
                       type="checkbox"
                       id="showInactive"
                       name="showInactive"
                       value="true"
                       @(Model.ShowInactive ? "checked" : null)
                       onchange="this.form.submit()" />
                <label class="form-check-label" for="showInactive">Pasifleri göster</label>
            </div>

            <button class="btn btn-outline-secondary" type="submit">Ara</button>
        </form>

        @if (User.HasPerm("Problems.Edit"))
        {
            <a asp-action="Create" class="btn btn-primary">➕ Yeni</a>
        }
    </div>
</div>


@if (TempData["Ok"] is not null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}

<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>Kod</th>
            <th>Ad</th>
            <th>Birim</th>
            <th class="text-end">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-muted">Kayıt yok.</td>
            </tr>
        }
        else
        {
            foreach (var p in Model.Items)
            {
                <tr class="@(p.IsActive ? "" : "table-secondary")">
                    <td class="text-nowrap">@p.Code</td>
                    <td>@p.Name</td>
                    <td>@p.Department</td>
                    <td class="text-end">
                        @if (User.HasPerm("Problems.Edit"))
                        {
                            <a class="btn btn-sm btn-outline-secondary"
                               asp-action="Edit"
                               asp-route-id="@p.ProblemId">Düzenle</a>

                            @if (p.IsActive)
                            {
                                <form asp-action="Deactivate" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.ProblemId" />
                                    <input type="hidden" name="q" value="@Model.Q" />
                                    <input type="hidden" name="showInactive" value="@Model.ShowInactive" />

                                    <button class="btn btn-sm btn-outline-danger ms-1"
                                            onclick="return confirm('Bu kaydı pasife almak istiyor musun?');">
                                        Pasife al
                                    </button>
                                </form>

                            }
                            else
                            {
                                <form asp-action="Activate" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.ProblemId" />
                                    <input type="hidden" name="q" value="@Model.Q" />
                                    <input type="hidden" name="showInactive" value="@Model.ShowInactive" />

                                    <button class="btn btn-sm btn-outline-success ms-1"
                                            onclick="return confirm('Bu kaydı tekrar aktif yapmak istiyor musun?');">
                                        Aktif et
                                    </button>
                                </form>

                            }

                            
                            @if (p.UsedTicketCount == 0)
                            {
                                <form asp-action="Delete" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.ProblemId" />
                                    <input type="hidden" name="q" value="@Model.Q" />
                                    <input type="hidden" name="showInactive" value="@Model.ShowInactive" />

                                    <button class="btn btn-sm btn-outline-dark ms-1"
                                            onclick="return confirm('Bu kaydı kalıcı olarak silmek istiyor musun?');">
                                        Sil
                                    </button>
                                </form>

                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-dark ms-1" disabled
                                        title="Ticketlarda kullanıldığı için silinemez.">
                                    Sil
                                </button>
                            }
                        }

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
